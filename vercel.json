{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGO_URI": "${MONGO_URI}",
    "JWT_SECRET": "${JWT_SECRET}",
    "JWT_EXPIRE": "30d",
    "JWT_COOKIE_EXPIRE": "30"
  }
}